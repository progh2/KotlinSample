<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="View Binding 자바"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnJava" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="86dp"
            app:layout_constraintEnd_toEndOf="parent" android:textAllCaps="true"/>
    <Button
            android:text="View Binding 코틀린"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnKotlin"
            app:layout_constraintStart_toStartOf="@+id/btnJava" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/btnJava"/>
    <Button
            android:text="변수 자바"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/btnKotlin" app:layout_constraintEnd_toStartOf="@+id/button4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="3dp" android:layout_marginRight="3dp"/>
    <Button
            android:text="변수 코틀린"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4" android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/btnKotlin" app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="흐름제어 자바"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="38dp" android:layout_marginLeft="80dp" android:layout_marginStart="80dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"/>
    <Button
            android:text="흐름제어 코틀린"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/button4" android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>