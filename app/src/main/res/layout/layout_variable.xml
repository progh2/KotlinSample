<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Activity시작시간"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startTimeLabel"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="124dp" android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp" app:layout_constraintEnd_toEndOf="@+id/clickCountLabel"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clickCountLabel" android:text="버튼이 클릭된 횟수"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="54dp"
            app:layout_constraintTop_toBottomOf="@+id/startTimeLabel" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="클릭"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/clickCountLabel" android:layout_marginTop="51dp"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/clickCountLabel"/>
</android.support.constraint.ConstraintLayout>